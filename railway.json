{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "bun install && bun build:backend",
    "watchPatterns": [
      "apps/revenue-api/**",
      "railway.json",
      "package.json",
      "bun.lock",
      "tsconfig.json",
      "tsconfig.base.json"
    ]
  },
  "deploy": {
    "startCommand": "bun apps/revenue-api/dist/server.js",
    "restartPolicyType": "ON_FAILURE",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 100
  }
}
