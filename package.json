{
  "name": "@shapeshiftoss/revenue-dashboard-monorepo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "bun": ">=1.3.2"
  },
  "scripts": {
    "clean": "rm -rf node_modules apps/*/dist apps/*/node_modules",
    "build": "tsc --build && bun run --filter './apps/*' build",
    "build:backend": "tsc --build && bun --filter @shapeshiftoss/revenue-api build",
    "build:frontend": "tsc --build && bun --filter @shapeshiftoss/revenue-dashboard build",
    "dev": "concurrently -n \"api,dashboard\" -c \"blue,magenta\" \"bun dev:api\" \"bun dev:dashboard\"",
    "dev:backend": "bun --filter @shapeshiftoss/revenue-api dev",
    "dev:frontend": "bun --filter @shapeshiftoss/revenue-dashboard dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --build"
  },
  "workspaces": [
    "apps/*"
  ],
  "devDependencies": {
    "@types/bun": "^1.3.3",
    "@types/node": "^24.0.1",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.7.4",
    "typescript": "^5.8.3"
  },
  "packageManager": "bun@1.3.2"
}
