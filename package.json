{
  "name": "@shapeshiftoss/revenue-dashboard-monorepo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "bun": ">=1.3.2"
  },
  "scripts": {
    "clean": "rm -rf node_modules apps/*/dist apps/*/node_modules",
    "build": "tsc --build && bun run --filter './apps/*' build",
    "build:api": "tsc --build && bun --filter @shapeshiftoss/revenue-api build",
    "build:dashboard": "tsc --build && bun --filter @shapeshiftoss/revenue-dashboard build",
    "dev": "concurrently -n \"api,dashboard\" -c \"blue,magenta\" \"bun dev:api\" \"bun dev:dashboard\"",
    "dev:api": "bun --filter @shapeshiftoss/revenue-api dev",
    "dev:dashboard": "bun --filter @shapeshiftoss/revenue-dashboard dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --build"
  },
  "workspaces": [
    "apps/*"
  ],
  "devDependencies": {
    "@types/bun": "^1.3.3",
    "@types/node": "^24.0.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.28.0",
    "typescript": "^5.8.3"
  },
  "packageManager": "bun@1.3.2"
}
